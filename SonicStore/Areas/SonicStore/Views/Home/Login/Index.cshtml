@* @model SonicStore.Areas.SonicStore.Models.Account *@
@model SonicStore.Repository.Entity.Account
@{
    string mess = TempData["StatusMessageGoogle"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập</title>
    <link rel="stylesheet" type="text/css" href="https://hoanghamobile.com/js-css/web_v1.2.2.3.css" />
    <style>
        .product-center .current-product-price label.text-green {
            display: none;
        }

        .btn-google {
            background-color: #1e90ff; /* Màu xanh dương */
            border: none;
            color: white;
            padding: 5px 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
            transition-duration: 0.4s;
        }

            .btn-google img {
                vertical-align: middle;
                margin-right: 8px;
            }

            .btn-google:hover {
                background-color: #1c86ee; /* Màu xanh dương nhạt hơn khi hover */
                color: white;
            }

        .split {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 20px 0;
        }

            .split::before,
            .split::after {
                content: "";
                flex: 1;
                border-bottom: 1px solid #000;
            }

            .split:not(:empty)::before {
                margin-right: .25em;
            }

            .split:not(:empty)::after {
                margin-left: .25em;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-form">
            <div class="form" style="margin-top:200px">
                <br />
                <center><h1>Đăng nhập</h1></center>
                <br />
                
                
                <div class="internal">
                    <form asp-action="Index" asp-route-returnUrl="@ViewBag.returnUrl" method="post">
                        <input type="hidden" name="ReturnUrl" value="@ViewBag.returnUrl" />
                        @if (!string.IsNullOrEmpty(mess))
                        {
                            <div class="text-danger">@mess</div>
                        }
                        <div asp-validation-summary="All" class="text-danger" style="margin-left:570px"></div>

                        <div class="form-group" style="margin-left:10px">
                            <label asp-for="Username" class="sr-only" style="font-size:20px; margin-right:12px">Tài khoản</label>
                            <input type="text" asp-for="Username" class="form-control" placeholder="Tài khoản" style="width:310px" />
                            <div asp-validation-for="Username" class="text-danger"></div>
                        </div>

                        <div class="form-group" style="margin-left:10px">
                            <label asp-for="Password" class="sr-only" style="font-size:20px; margin-right:12px">Mật khẩu</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Mật khẩu" style="width:310px" />
                            <div asp-validation-for="Password" class="text-danger"></div>
                        </div>



                        <div style="display:flex; justify-content:center; margin-right:10px">
                            <div style="width:15%; margin: 0 20px;"> <button class="btn btn-submit" type="submit">ĐĂNG NHẬP</button> </div>
                            <div style="width:15%"> <a class="btn btn-register" href="/register">ĐĂNG KÝ</a></div>

                        </div>

                        <div class="row" style="margin-left:45%; margin-top:20px">
                            <p class="forgotpass">
                                <a style="font-size:larger " asp-area="SonicStore" asp-controller="ForgotPassword" asp-action="Index">Quên mật khẩu?</a>
                            </p>
                        </div>



                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}