@{
    Layout = null;
    var statusMessage = TempData["StatusMessage"] as string;
}

<!DOCTYPE html>
<html>
<title>Nhập lại mật khẩu</title>
<head>
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f7f7f7;
        }

        .reset-form {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
        }

            .reset-form h2 {
                margin-bottom: 20px;
                color: #333;
            }

            .reset-form label {
                display: block;
                margin-bottom: 10px;
                color: #333;
            }

            .reset-form input[type="password"] {
                width: calc(100% - 20px);
                padding: 10px;
                margin-bottom: 20px;
                border: 1px solid #ddd;
                border-radius: 5px;
            }

            .reset-form button {
                background: #007bff;
                color: #fff;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                width: 100%;
            }

                .reset-form button:hover {
                    background: #0056b3;
                }

        .alert-info {
            background: #e7f3fe;
            border-left: 6px solid #2196F3;
            margin-bottom: 15px;
            padding: 10px;
            color: #31708f;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="reset-form">
            @if (!string.IsNullOrEmpty(statusMessage))
            {
                <div class="alert alert-info">@statusMessage</div>
            }
            <h2>Reset Password</h2>
            <form id="resetPasswordForm" method="post" asp-action="ResetUserPassword">
                <div>
                    <label>New Password:</label>
                    <input type="password" name="newPassword" required />
                </div>
                <div>
                    <label>Confirm Password:</label>
                    <input type="password" name="confirmPassword" required />
                </div>
                <button type="submit">Reset Password</button>
            </form>
        </div>
    </div>
</body>
</html>
